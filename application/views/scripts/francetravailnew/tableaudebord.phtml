    document.addEventListener("DOMContentLoaded", function() {
        const map = L.map('master-map').setView([48.8566, 2.3522], 6);

        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
            attribution: '&copy; OpenStreetMap contributors',
            maxZoom: 18
        }).addTo(map);

        // Marqueurs fictifs
        const villes = [{
                name: "Paris",
                coords: [48.8566, 2.3522]
            },
            {
                name: "Lyon",
                coords: [45.7640, 4.8357]
            },
            {
                name: "Marseille",
                coords: [43.2965, 5.3698]
            }
        ];

        villes.forEach(v => {
            L.marker(v.coords).addTo(map).bindPopup(`<strong>${v.name}</strong><br>Offres disponibles`);
        });
    });
</script>