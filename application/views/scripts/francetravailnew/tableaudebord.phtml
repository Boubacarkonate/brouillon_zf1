<script>
    $(document).ready(function() {

        const leftPanel = $('#left-panel');
        const map = L.map('master-map').setView([46.8, 2.5], 5);
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        const markers = L.markerClusterGroup().addTo(map);

        // --- Fonction d'affichage des donn√©es + marqueurs ---
        function renderData(items) {
            leftPanel.empty();
            markers.clearLayers();

            if (!items.length) {
                leftPanel.html('<div class="text-muted">Aucune donn√©e disponible.</div>');
                return;
            }

            $.each(items, function(idx, item) {
                let coords = (item.latitude && item.longitude) ?
                    ` (lat: ${item.latitude}, lon: ${item.longitude})` : '';
                let url = item.url ? `<a href="${item.url}" target="_blank">Voir</a>` : '';

                const html = `
            <div class="list-group-item border-0 border-bottom d-flex justify-content-between align-items-center">
                <div>
                    <strong>${item.libelle || 'Sans libell√©'}</strong><br>${url}${coords}
                </div>
                <button class="btn btn-sm btn-outline-danger btn-delete-item" data-id="${item.id}" title="Supprimer">
                    üóë
                </button>
            </div>`;
                leftPanel.append(html);

                if (item.latitude && item.longitude) {
                    const lat = parseFloat(item.latitude);
                    const lon = parseFloat(item.longitude);
                    if (!isNaN(lat) && !isNaN(lon)) {
                        const popup = `<strong>${item.libelle || 'Sans titre'}</strong><br>${url}`;
                        const marker = L.marker([lat, lon]).bindPopup(popup);
                        markers.addLayer(marker);
                    }
                }
            });

            if (markers.getLayers().length > 0) {
                map.fitBounds(markers.getBounds(), {
                    padding: [30, 30]
                });
            }
        }

        // --- Clic sur les boutons de filtre ---
        $('.btn-filter').on('click', function() {
            const type = $(this).data('type');
            const projet = $(this).data('projet'); // prend le projet depuis le bouton
            leftPanel.html('<div class="text-muted">Chargement en cours...</div>');

            $.ajax({
                url: '/zf1/public/francetravailnew/getdata',
                type: 'GET',
                dataType: 'json',
                data: {
                    type: type,
                    projet: projet
                },
                success: function(response) {
                    if (response.success) renderData(response.data);
                    else leftPanel.html(
                        '<div class="text-danger">Erreur : donn√©es non disponibles.</div>');
                },
                error: function(xhr) {
                    console.error(xhr.responseText);
                    leftPanel.html(
                        '<div class="text-danger">Erreur de communication avec le serveur.</div>'
                    );
                }
            });
        });

        // --- Suppression d‚Äôun item ---
        $(document).on('click', '.btn-delete-item', function() {
            const id = $(this).data('id');
            const itemDiv = $(this).closest('.list-group-item');

            if (!confirm('Supprimer cet √©l√©ment ?')) return;

            $.ajax({
                url: '/zf1/public/francetravailnew/deleteitem',
                type: 'POST',
                dataType: 'json',
                data: {
                    id: id
                },
                success: function(res) {
                    alert(res.message);
                    if (res.success) itemDiv.remove();
                },
                error: function() {
                    alert('Erreur de communication avec le serveur.');
                }
            });
        });
    });
</script>

