<?php if (!empty($this->offres)): ?>
    <table border="1" cellpadding="5">
        <tr>
            <th>Titre du poste</th>
            <th>Entreprise</th>
            <th>Localisation</th>
            <th>Type de contrat</th>
            <th>Date de publication</th>
            <th>Lien</th>
        </tr>
        <?php foreach ($this->offres as $offre): ?>
